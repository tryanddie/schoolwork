<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.LoginController">
   <Label prefHeight="130.0" prefWidth="300.0" style="-fx-background-color: brown;" text="      图书馆"
          textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font size="47.0"/>
      </font>
   </Label>
   <TextField fx:id="ID" layoutX="49.0" layoutY="169.0" prefHeight="30.0" prefWidth="202.0" promptText="账号"/>
   <PasswordField fx:id="password" layoutX="49.0" layoutY="220.0" prefHeight="30.0" prefWidth="202.0" promptText="密码"/>
   <Button layoutX="49.0" layoutY="302.0" mnemonicParsing="false" onAction="#login" prefHeight="30.0" prefWidth="202.0"
           text="登录">
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
   <Button layoutX="101.0" layoutY="349.0" mnemonicParsing="false" onAction="#signUp" prefHeight="30.0" prefWidth="80.0"
           style="-fx-background-color: F4F4F4;" text="游客登录">
      <cursor>
         <Cursor fx:constant="HAND"/>
      </cursor>
   </Button>
</AnchorPane>
